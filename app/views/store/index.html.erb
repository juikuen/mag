<h1>Katalog</h1>
<% if @count > 5 -%>
	Vie prezaredihte tazi stranica  <%= pluralize(@count,"time") %>, priateli.
<% end -%>
<% for product in @products -%>
	<div class="entry">
		<% form_remote_tag :url => { :action => 'add_to_cart', :id => product } do %>
			<%= image_submit_tag(product.image_url, :alt => product.title, :title => "Dobavi v kolichkata", :class => "product_picture") %>
		<% end %>
		<h3><%=h product.title %></h3>
		<%= product.description %>
		<div class="price-line">
		<span class="price" ><%= number_to_currency(product.price) %></span>
		<% form_remote_tag :url => { :action => 'add_to_cart', :id => product } do %>
		<%= submit_tag "Dobavi v kolichkata" %>
		<% end %>
		</div>
	</div>
<% end %>
